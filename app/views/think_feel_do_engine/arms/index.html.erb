<h1>Home</h1>

<div class="btn-toolbar" role="toolbar">
  <!-- Researcher -->
  <% if can? :manage, Participant %>
    <%= link_to "Researcher Dashboard", (defined?(think_feel_do_dashboard) ? think_feel_do_dashboard.root_path : "#"), class: "btn btn-default" %>
  <% end %>
  <!-- Clinicians -->
  <% if can? :create, Message %>
    <%= link_to "Coach Dashboard", coach_dashboard_index_path, class: "btn btn-default" %>
  <% end %>
</div>

<!-- Content Authors -->
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Arms</h3>
  </div>
  <div class="panel-body">
    <p>Listed below are the arms for which you can access, moderate, and manage content.</p>
  </div>
  <div class="list-group">
    <% for arm in @arms %>
      <% if can? :read, arm %>
        <%= link_to "#{arm.title} <span class=\"badge\">#{arm.groups.count}</span>".html_safe, arm_path(arm), :class => "list-group-item" %>
      <% end %>
    <% end %>
  </div>
</div>