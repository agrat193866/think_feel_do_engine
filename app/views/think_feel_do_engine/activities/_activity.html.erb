<% no_value_msg = "<span class=\"label label-warning\">Not Answered</span>".html_safe %>
<tr>
  <td><%= activity.start_time.to_s(:time_with_meridian) %> - <%= activity.end_time.to_s(:time_with_meridian) %></td>
  <td><%= activity.title %></td>
  <td><% if(activity.actual_pleasure_value != "Not answered") %>
  	<%= activity.actual_pleasure_value %> (<%= activity.actual_pleasure_intensity %>)
  		<% else %>
  		<%= no_value_msg %>
  		<% end %>
  </td>
  <td>
  	<% if(activity.actual_accomplishment_value != "Not answered") %>
  	<%= activity.actual_accomplishment_value %> (<%= activity.actual_accomplishment_intensity %>)
  		<% else %>
  		<%= no_value_msg %>
  		<% end %>
  </td>
</tr>
