<h1>Edit Slide <small><%= @slide.title %></small></h1>

<%= form_for(@slide, as: :slide, url: arm_lesson_lesson_slide_path(@arm, @lesson, @slide)) do |f| %>
	<%= render "think_feel_do_engine/bit_maker/slides/fields", f: f, slide: @slide %>
	<%= f.submit "Update", class: "btn btn-default" %>
	<%= link_to "Cancel", arm_lesson_lesson_slide_path(@arm, @lesson, @slide), class: "btn btn-default" %>
<% end %>
