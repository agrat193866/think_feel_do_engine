<% responder = current_participant || current_user %>
<% sent_at = message.try(:sent_at) ? "#{ l(message.sent_at, format: :standard) } (#{ time_ago_in_words(message.created_at)} ago)" : "#{ l(message.created_at, format: :standard) } (#{ time_ago_in_words(message.created_at)} ago)" %>

<h3><%= message.subject %></h3>
<strong>From <%= message.from(responder) %></strong>
<span class="pull-right"><%= sent_at %></span>
<br>
<span class="text-muted">To <%= message.to(responder) %></span>
<p><%= message.render_body %></p>