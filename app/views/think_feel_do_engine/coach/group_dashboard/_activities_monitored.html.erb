<div class="panel panel-default cdb_panel" id="activities-monitored-container">
  <div class="panel-heading">
    <h3 class="panel-title adjusted-panel-title">
      <a data-toggle="collapse" data-parent="#accordion" href="#activitiesMonitoredCollapse">
        Activities Monitored
      </a>
    </h3>
  </div>

  <div id="activitiesMonitoredCollapse" class="panel-collapse collapse in">
    <div class="panel-body">
      <div class="table-responsive div-table-viz">
        <table class="table table-hover data-table" id="activities_monitored_data">
          <thead>
          <tr>
            <th class="not-displayed"></th>
            <th>Created At</th>
            <th>Study ID</th>
            <th>Activity Type</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Actual Accomplishment Intensity</th>
            <th>Actual Pleasure Intensity</th>
            <th>Predicted Accomplishment Intensity</th>
            <th>Predicted Pleasure Intensity</th>
            <th>Is Complete</th>
            <th>Noncompliance Reason</th>
            <th>Likes</th>
            <th>Comments</th>
          </tr>
          </thead>
          <tbody>

          <% group.memberships.each do |membership| %>
            <% membership.participant.activities.where(is_monitored: true).each do |activity| %>
              <tr>
                <td class="not-displayed">
                  <%= activity.created_at ? activity.created_at.to_i : 0 %>
                </td>
                <td><%= activity.created_at.to_formatted_s(:short) %></td>
                <td><%= membership.participant.study_id %></td>
                <td><%= ActivityType.find(activity.activity_type_id).title %> </td>
                <td><%= activity.start_time ? activity.start_time.to_formatted_s(:short) : "---" %></td>
                <td><%= activity.end_time ? activity.end_time.to_formatted_s(:short) : "---" %></td>
                <td><%= activity.actual_accomplishment_intensity %></td>
                <td><%= activity.actual_pleasure_intensity %></td>
                <td><%= activity.predicted_accomplishment_intensity %></td>
                <td><%= activity.predicted_pleasure_intensity %></td>
                <td><%= activity.is_complete %></td>
                <td><%= activity.noncompliance_reason %></td>
                <td></td>
                <td></td>
              </tr>
            <% end %>
          <% end %>

          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script>
  $(function () {
    return $('#activities_monitored_data').dataTable({
      sPaginationType: 'bootstrap',
      order: [[0, "desc"]],
      oLanguage: {
        sSearch: 'Filter: '
      },
      aoColumnDefs: [
        {
          aTargets: [0],
          bVisible: false
        },
        {
          aTargets: [1],
          iDataSort: [0]
        }
      ],
      oLanguage: {
        sSearch: 'Filter: '
      }
    });
  });
</script>