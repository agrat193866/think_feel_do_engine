<h1>Group <small><%= @group.title %></small></h1>

<div class="btn-toolbar" role="toolbar">
  <%= link_to "Group", (defined?(think_feel_do_dashboard) ? think_feel_do_dashboard.group_path(@group) : "#"), class: "btn btn-default" %>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Group Summary</h3>
  </div>

  <div class="panel-body">
    <table class="table">
      <%= render partial: "think_feel_do_engine/coach/group_dashboard/summary", locals: {group: @group} %>
      <%= render(partial: "think_feel_do_engine/coach/group_dashboard/summary_social", locals: {group: @group}) if social_features? %>
    </table>
  </div>
</div>

<a name="login_table"></a>
<%= render partial: "think_feel_do_engine/coach/group_dashboard/logins", locals: {group: @group} %>

<%= render partial: "think_feel_do_engine/coach/group_dashboard/lessons", locals: {group: @group} %>

<a name="thoughts_table"></a>
<%= render partial: "think_feel_do_engine/coach/group_dashboard/thoughts", locals: {group: @group} %>

<a name="activities_past_table"></a>
<%= render partial: "think_feel_do_engine/coach/group_dashboard/activities_past", locals: {group: @group} %>

<a name="activities_future_table"></a>
<%= render partial: "think_feel_do_engine/coach/group_dashboard/activities_future", locals: {group: @group} %>

<% if social_features? %>
  <a name="on_the_mind_statements_table"></a>
  <%= render partial: "think_feel_do_engine/coach/group_dashboard/on_my_mind_statements", locals: {group: @group} %>

  <a name="comments_table"></a>
  <%= render partial: "think_feel_do_engine/coach/group_dashboard/comments", locals: {group: @group} %>

  <a name="goals_table"></a>
  <%= render partial: "think_feel_do_engine/coach/group_dashboard/goals", locals: {group: @group} %>

  <a name="likes_table"></a>
  <%= render partial: "think_feel_do_engine/coach/group_dashboard/likes", locals: {group: @group} %>
<% end %>


