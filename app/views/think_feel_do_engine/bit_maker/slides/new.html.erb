<h1>New Slide</h1>
<%= form_for(@slide, as: :slide, url: bit_maker_slideshow_slides_path(@slideshow, @slide)) do |f| %>
	<%= render "think_feel_do_engine/bit_maker/slides/fields", f: f, slide: @slide %>
	<%= f.submit "Create", class: "btn btn-default" %>
	<%= link_to "Cancel", bit_maker_slideshow_path(@slideshow), class: "btn btn-default" %>
<% end %>
