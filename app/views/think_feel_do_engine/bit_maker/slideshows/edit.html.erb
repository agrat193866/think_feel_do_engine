<h1>Edit Slideshow <small><%= @slideshow.title %></small></h1>

<%= form_for(@slideshow, as: :slideshow, url: bit_maker_slideshow_path(@slideshow)) do |f| %>
	<%= render "think_feel_do_engine/bit_maker/slideshows/fields", f: f %>
	<%= f.submit "Update", class: "btn btn-default" %>
	<%= link_to "Cancel", bit_maker_slideshow_path(@slideshow), class: "btn btn-default" %>
<% end %>
