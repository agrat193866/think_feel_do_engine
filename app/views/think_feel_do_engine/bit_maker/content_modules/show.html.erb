<h1>Content Module <small><%= @content_module.title %></small></h1>

<div class="btn-toolbar" role="toolbar">
  <%= link_to 'Modules', arm_bit_maker_content_modules_path(@arm), class: "btn btn-default" %>
  <%= link_to 'Edit', edit_arm_bit_maker_content_module_path(@arm, @content_module), class: "btn btn-default" %>
  <%= link_to 'Destroy', arm_bit_maker_content_module_path(@arm, @content_module), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
</div>

<p>
  <strong>Tool:</strong>
  <%= link_to @content_module.tool.title, arm_bit_maker_tool_path(@arm, @content_module.tool) %>
</p>

<p>
  <strong>Position:</strong>
  <%= "#{ @content_module.position } / #{ @content_module.tool.last_position }" %>
</p>

<p>
  <strong>Content Providers:</strong>
  <div class="list-group">
    <% @content_module.content_providers.order(:position).each do |p| %>
      <%= link_to "#{ p.position } #{ p.pretty_label }", arm_bit_maker_content_provider_path(@arm, p), class: "list-group-item" %>
    <% end %>
  </div>
</p>
